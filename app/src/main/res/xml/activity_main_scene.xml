<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
        <OnSwipe
            motion:touchAnchorId="@id/recyclerView"
            motion:touchAnchorSide="top"
            motion:dragDirection="dragUp"
            />
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/imageView"
            >
            <PropertySet android:alpha="1"/>
        </Constraint>
        <Constraint
            android:id="@+id/subtitle"
            >
            <PropertySet android:alpha="1"/>
        </Constraint>
        <Constraint
            android:id="@+id/appBar"
            >
            <PropertySet android:alpha="0"/>
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/imageView"
            >
            <PropertySet android:alpha="0"/>
        </Constraint>
        <Constraint
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="32dp"
            motion:layout_constraintTop_toTopOf="@id/floatingActionButton"
            motion:layout_constraintStart_toEndOf="@id/floatingActionButton"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toBottomOf="@id/floatingActionButton"
            >
            <PropertySet android:alpha="0"/>
        </Constraint>
        <Constraint
            android:id="@+id/subtitle"
            >
            <PropertySet android:alpha="0"/>
        </Constraint>
        <Constraint
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            motion:layout_constraintTop_toBottomOf="@+id/appBar"
            />
        <Constraint
            android:id="@+id/appBar"
            >
            <PropertySet android:alpha="1"/>
        </Constraint>
    </ConstraintSet>
</MotionScene>